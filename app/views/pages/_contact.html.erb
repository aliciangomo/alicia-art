<div class="modal fade" id="contact-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Your message for Alicia</h4>
        <button id="close-btn" type="button" class="close button-primary" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag '/contact' do%>
          Email : </br><%= text_field_tag 'email','', class: "form-control" %></br>
          Subject: </br><%= text_field_tag 'subject', '', class: "form-control" %></br>
          Body:<%= text_area_tag 'body', '', class: "form-control"%>
          <br>
          <%= submit_tag "submit",:value => "submit", :class => "btn button-primary" %>
        <%end%>
      </div>
    </div>
  </div>
</div>
